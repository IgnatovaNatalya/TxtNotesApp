<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Base.Theme.WhiteList" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Цвета поверхностей -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Основные цвета -->
        <item name="colorPrimary">@color/accent_coral</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/accent_coral</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/accent_blue</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Используем surface цвета вместо background -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Устанавливаем фон окна через windowBackground -->
        <item name="android:windowBackground">@color/background_light</item>

        <!-- Дополнительные атрибуты -->
        <item name="cardViewStyle">@style/CardView.WhiteList</item>

        <!-- Стиль для текста -->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.WhiteList.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.WhiteList.BodyMedium</item>


    </style>

    <!-- Финальная тема -->
    <style name="Theme.WhiteList" parent="Base.Theme.WhiteList" />

    <!-- Стиль для CardView -->
    <style name="CardView.WhiteList" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <!-- Текстовые стили -->
    <style name="TextAppearance.WhiteList.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextAppearance.WhiteList.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="fontFamily">@font/nunito_medium</item>
    </style>

    <style name="Theme.WhiteList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>