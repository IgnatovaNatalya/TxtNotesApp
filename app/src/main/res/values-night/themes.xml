<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовая тема для темной темы -->
    <style name="Base.Theme.WhiteList" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Цвета поверхностей -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Основные цвета (акценты остаются теми же) -->
        <item name="colorPrimary">@color/accent_coral</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/container_dark</item>
        <item name="colorOnPrimaryContainer">@color/text_secondary_dark</item>

        <item name="colorSecondary">@color/text_primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/accent_blue</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <item name="colorContainer">@color/popup_dark</item>
        <item name="android:colorPressedHighlight">@color/item_pressed_dark</item>

        <item name="colorSurface">@color/divider_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="colorControlNormal">@color/text_primary_dark</item>

        <!-- Устанавливаем фон окна через windowBackground -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Стиль для текста -->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.WhiteList.BodyLarge.Dark
        </item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.WhiteList.BodyMedium.Dark
        </item>
    </style>


    <!-- Текстовые стили для темной темы -->
    <style name="TextAppearance.WhiteList.BodyLarge.Dark" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextAppearance.WhiteList.BodyMedium.Dark" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="fontFamily">@font/nunito_medium</item>
    </style>
</resources>