<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".presentation.root.RootActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="false"
        android:layout_marginTop="40dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/share_receiver_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Основная"
            app:subtitle="Записная книжка"
            app:navigationIconTint="?attr/colorOnSurface"
            app:navigationIcon="@drawable/ic_accept"
            app:titleTextAppearance="@style/toolbarTitleStyle"
            app:subtitleTextAppearance="@style/toolbarSubtitleStyle"
            android:fitsSystemWindows="false"/>

        <include android:id="@+id/note_edit_container" layout="@layout/fragment_note_edit" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>