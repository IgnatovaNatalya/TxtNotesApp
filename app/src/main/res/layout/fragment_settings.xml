<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.settings.SettingsFragment">

    <TextView
        style="@style/NoteEditTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginHorizontal"
        android:layout_marginTop="16dp"
        android:textColor="?attr/android:textColorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/base_folder" />

    <LinearLayout
        android:id="@+id/settings_folder"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/marginHorizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_folder"/>

        <TextView
            android:id="@+id/folder_path"
            style="@style/NoteEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="?attr/android:textColorPrimary"
            tools:text="/Android/..." />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_shevron"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="@dimen/marginHorizontal"
        android:gravity="center">

        <Button
            android:id="@+id/reset_folder_button"
            style="@style/StartScreenItemAdd"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:padding="0dp"
            android:background="@drawable/bg_button_round"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:layout_gravity="center"
            android:text="@string/reset_folder"/>

    </LinearLayout>

</LinearLayout>