<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:layout_marginTop="0dp"
    android:background="?attr/android:windowBackground"
    android:fitsSystemWindows="false"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:backgroundTint="@color/accent_coral"
    android:paddingVertical="42dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:textSize="20sp"
        android:text="@string/fragment_start_label" />

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="72dp"
        android:layout_height="9dp"
        android:contentDescription="@string/app_name"
        android:foregroundGravity="left"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/app_logo_menu"
        app:tint="@color/text_primary_light"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/drawer_menu_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="8dp" />
</LinearLayout>

